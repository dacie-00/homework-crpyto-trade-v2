{% from "macros/format_number.html.twig" import formatNumber %}
{% extends "partials/_base.html.twig" %}

{% block title %} Transaction list {% endblock %}
{% block content %}
    <h1>
        Currency - {{ query }}
    </h1>
    {% if not currency %}
        <p>Currency {{ query }} not found.</p>
    {% else %}
        <table>
            <tr>
                <th>Ticker</th>
                <th>Exchange Rate</th>
            </tr>
            <tr>
                <td>{{ currency.ticker }}</td>
                <td>{{ formatNumber(currency.exchangeRate) }}</td>
            </tr>
        </table>
        <h2>Buy currency</h2>
        <form action="{{ currency.ticker }}/buy" method="post">
            <label for="amount">Amount</label>
            <input type="number" id="amount" name="amount"><br>
            <input type="submit" value="Submit">
        </form>
    {% endif %}
{% endblock %}