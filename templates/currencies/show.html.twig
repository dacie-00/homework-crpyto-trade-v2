{% from "macros/format_number.html.twig" import formatNumber %}
{% extends "partials/_base.html.twig" %}

{% block title %} Transaction list {% endblock %}
{% block content %}

    <h1 class="text-gray-200 py-4 text-2xl">
        Currency - {{ query }}
    </h1>
    {% if not query %}
        <p class="text-gray-200 py-4 text-1xl">Currency {{ query }} not found.</p>
    {% else %}
        <div class="pb-4 shadow-2xl relative overflow-x-auto max-w-5xl">
            <table class="w-full text-sm text-left text-gray-400 shadow">
                <thead class="text-xs uppercase bg-gray-700 text-gray-400">
                <tr>
                    <th scope="col" class="px-6 py-3">
                        Ticker
                    </th>
                    <th scope="col" class="px-6 py-3">
                        Exchange Rate
                    </th>
                </tr>
                </thead>

                <tbody>
                <tr class="border-b bg-gray-800 border-gray-700 text-gray-400 even:brightness-105">
                    <td class="px-6 py-4 hover:text-gray-200">
                        {{ currency.ticker }}
                    </td>
                    <td class="px-6 py-4>">
                        {{ formatNumber(currency.exchangeRate) }}
                    </td>
                </tr>
            </table>
        </div>


        <div class="flex w-1/4 items-center justify-between">
            <a href="#" class="block max-w-sm p-4 shadow bg-gray-800 border-gray-700">
                <h2 class="text-gray-200 text-1xl text-center">Buy {{ currency.ticker }}</h2>
                <form action="{{ currency.ticker }}/buy" method="post" class="max-w-md mx-auto">
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="text" name="amount" id="amount"
                               class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                               placeholder=" " required/>
                        <label for="amount"
                               class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Amount</label>
                    </div>
                    <button type="submit"
                            class="text-gray-100 bg-gray-700 hover:bg-gray-600 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-sm w-full sm:w-auto px-5 py-1.5 text-center">
                        Submit
                    </button>
                </form>
            </a>
            <a href="#" class="block max-w-sm p-4 shadow bg-gray-800 border-gray-700">
                <h2 class="text-gray-200 text-1xl text-center">Sell {{ currency.ticker }}</h2>
                <form action="{{ currency.ticker }}/sell" method="post" class="max-w-md mx-auto">
                    <div class="relative z-0 w-full mb-5 group">
                        <input type="text" name="amount" id="amount"
                               class="block py-2.5 px-0 w-full text-sm text-gray-900 bg-transparent border-0 border-b-2 border-gray-300 appearance-none dark:text-white dark:border-gray-600 dark:focus:border-blue-500 focus:outline-none focus:ring-0 focus:border-blue-600 peer"
                               placeholder=" " required/>
                        <label for="amount"
                               class="peer-focus:font-medium absolute text-sm text-gray-500 dark:text-gray-400 duration-300 transform -translate-y-6 scale-75 top-3 -z-10 origin-[0] peer-focus:start-0 rtl:peer-focus:translate-x-1/4 peer-focus:text-blue-600 peer-focus:dark:text-blue-500 peer-placeholder-shown:scale-100 peer-placeholder-shown:translate-y-0 peer-focus:scale-75 peer-focus:-translate-y-6">Amount</label>
                    </div>
                    <button type="submit"
                            class="text-gray-100 bg-gray-700 hover:bg-gray-600 focus:ring-4 focus:outline-none focus:ring-blue-300 rounded-lg text-sm w-full sm:w-auto px-5 py-1.5 text-center">
                        Submit
                    </button>
                </form>
            </a>
        </div>
    {% endif %}
{% endblock %}